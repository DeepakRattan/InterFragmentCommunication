<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.deepakrattan.interfragmentcommunication.MainActivity"
    android:background="#ffff00">

    <fragment
        android:id="@+id/fragmentOne"
        android:name="com.example.deepakrattan.interfragmentcommunication.FragmentOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <fragment
        android:id="@+id/fragmentTwo"
        android:name="com.example.deepakrattan.interfragmentcommunication.FragmentTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragmentOne"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
